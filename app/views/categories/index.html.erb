<h1>Categories:</h1>
<%= link_to 'New Category', new_category_path %>
<br>
<br>
<% @categories.each do |category| %>
  Category Name:
  <%= category.name %>
  <br>
  Articles with this category:
  <ul>
  <% category.entries.each do |entry| %>
    <li><%= link_to "#{entry.title}", entry_path(entry) %></li>
  <% end %>
  </ul>
  <br>
  <%= link_to 'Edit', edit_category_path(category) %> |
  <%= link_to 'Destroy', category_path(category), method: :delete %>
  <br>
  <br>
<% end %>
<%= link_to 'Return to Journal', entries_path %>

