<%= form_for(@entry) do |f| %>
<% if @entry.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@entry.errors.count, "error") %> occured: </h2>

    <ul>
    <% @entry.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title, size:"30" %>
  <br>
  <%= f.label :content %><br>
  <%= f.text_area :content, size:"40x10" %><br>
</div>

<div class="actions">
  <%= f.submit %>
</div>
<% end %>
