<h1>Entries</h1>

<% @entries.each do |entry| %>
  <span class="title"><%= entry.title %></span><br/>
  <%= entry.content %>
  <br>
  Created at: <%= entry.created_at.strftime("%B %e, %Y") %>
  <br>
  Categories:
  <% entry.categories.each do |category| %>
    <%= category.name %>
  <% end %>
  <br>
  <%= link_to 'Show', entry_path(entry) %> | <%= link_to 'Edit', edit_entry_path(entry) %> |
  <%= link_to 'Destroy', entry_path(entry), method: :delete %>
  <br>
  <br>
<% end %>

<%= link_to 'New Entry', new_entry_path, class: "button radius" %>
